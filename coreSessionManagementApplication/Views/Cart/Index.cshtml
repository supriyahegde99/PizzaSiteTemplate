@{
    ViewData["Title"] = "Index";
}
<h1>Cart</h1>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Bill</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.cart)
        {
            <tr>
                <td>@item.Product.Id</td>
                <td>@item.Product.Name</td>
                <td>@item.Product.Price</td>
                <td>@item.Quantity</td>
                <td>@(item.Product.Price* item.Quantity)</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>Total</th>
            <th>@ViewBag.total</th>
        </tr>
    </tfoot>
</table>
<a asp-action="Index" class="btn btn-secondary" asp-action="index" asp-controller="product">Continue shopping</a>
<a asp-action="success" name="checkout" class="btn btn-success">Checkout</a> |

