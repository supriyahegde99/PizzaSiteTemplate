@{
    ViewData["Title"] = "EmptyCart";
}
<div class="container-fluid mt-100">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5>Cart</h5>
                </div>
                <div class="card-body cart">
                    <div class="col-sm-12 empty-cart-cls text-center">
                        <img src="https://th.bing.com/th/id/OIP.LDk3Feirhe9v9Pkl1YxrAgAAAA?w=181&h=181&c=7&r=0&o=5&dpr=1.5&pid=1.7" width="130" height="130" class="img-fluid mb-4 mr-3">
                        <h3><strong>Your Cart is Empty</strong></h3>
                        <h4>Add your favourite pizzas to proceed:)</h4> <a  asp-controller="Product" asp-action="Index" class="btn btn-secondary cart-btn-transform m-3" data-abc="true">continue shopping</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>